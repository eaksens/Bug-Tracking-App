<div class="bg-img jumbotron">
  <div class="bg-text container">
    <h1 class="display-4">Welcome to Bug Tracking Application</h1>
    <p class="lead">When we found bugs, record it here. After fixed it, then update it here as well!</p>
    <p><a class="btn btn-primary btn-lg" href="/posts/new" role="button">Create Bug!</a></p>
  </div>
</div>

  <div class="container">
    <!-- Example row of columns -->
    <div class="row">
     <% @posts.each do |post| %>
     <div class="col-md-4">
       <h2><%= post.title%></h2>
       <p><%=post.description.truncate_words(30)%></p>
       <p>
         <%= link_to 'Read more >', post, class: "btn btn-primary"%>
       </p>
     </div>
     <% end %>
    </div>
