<% if !notice.blank? %>
<p id="notice" class="alert alert-success"><%= notice %></p>
<% end %>
<h1>Bugs List</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th class="col-md-1.7">Title</th>
      <th class="col-md-1.7">Description</th>
      <th class="col-md-1.7">Issue type</th>
      <th class="col-md-1.7">Priority</th>
      <th class="col-md-1.7">Status</th>
      <th class="col-md-1.7">User</th>
      <th class="col-md-1.7" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td class="col-md-1.7"><%= post.title %></td>
        <td class="col-md-1.7"><%= post.description %></td>
        <td class="col-md-1.7"><%= post.issue_type %></td>
        <td class="col-md-1.7"><%= post.priority %></td>
        <td class="col-md-1.7"><%= post.status %></td>
        <td class="col-md-1.7">
          <%= (post.user.try(:lname)) || "NA" %>
        </td>
        <td class="col-md-1.7">
          <%= link_to post, class: "btn btn-default btn-sm" do %>
          <i class="glyphicon glyphicon-eye-open"></i> Show
          <% end %>
          <%= link_to edit_post_path(post), class: "btn btn-default btn-sm" do %>
          <i class="glyphicon glyphicon-eye-open"></i> Edit
          <% end %>
          <%= link_to post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default btn-danger" do %>
          <i class="glyphicon glyphicon-eye-open"></i> Delete
          <% end %>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bug', new_post_path, :class => "btn btn-primary" %>
